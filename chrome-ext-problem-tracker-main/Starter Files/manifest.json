{
  "manifest_version": 3,
  "name": "AI Powered Reading Mode",
  "version": "1.0",
  "author": "Gryffindors",
  "description": "It's like a smart summarizer and it used to read the text in the audio format",
  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "identity",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources" : [
    {
      "resources": [],
      "matches" : ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      
    },
    "default_popup": "index.html",
    "default_title": "AI Reading Mode"
  },
  "host_permissions":  ["<all_urls>"]

}

